	</div>

{% endblock %}

{% block aside %}
	<p>Bonjour</p><h2 id="namePseudo"> {{user.pseudo}}</h2>
	{% if user.filename %}
		<img src="{{ asset('img/profilpicture/'~user.filename) }}" height="300" width="255" />
	{% else %}
		<img src="{{ asset('img/profilpicture/default.jpg') }}" height="300" width="255" />
	{% endif %}
	<div>
		<a href="{{ path('kikala_front_profil') }}" class="btn btn-default col-xs-12 col-md-8" role="button">Modifier son profil</a>
	</div>	
{% endblock %}

